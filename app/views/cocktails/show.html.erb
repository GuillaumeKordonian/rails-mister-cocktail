<h1><%= @cocktail.name %></h1>

<ul>
  <% @doses.each do |dose| %>
    <li><strong><%= dose.ingredient.name.upcase %></strong> |
      <%= dose.description %> |
      <%= link_to(cocktail_dose_path(@cocktail, dose), options = { method: :delete, data: { confirm: "Are you sure?" } }) do %>
        <i class="fas fa-trash-alt"></i>
      <% end %>
    </li>
  <% end %>
</ul>

<%= link_to "add a dose", new_cocktail_dose_path(@cocktail) %> | <%= link_to "back to list", cocktails_path %>
